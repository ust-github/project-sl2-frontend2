{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@app/auth": [
        "src/app/core/auth/index.ts"
      ],
      "@app/env": [
        "src/environments/environment.ts"
      ],
      "lib": [
        "es2018",
        "dom"
      ]
    }
  }
}
